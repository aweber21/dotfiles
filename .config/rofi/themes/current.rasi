entry {
    enabled: true;

    // Module Specific
    // font: "JetBrainsMono Nerd Font";
    vertical-align: 0.5;
    horizontal-align: 0.0;
    text-transform: none;
    highlight: none;
    width: none;
    placeholder: "Type to filter";
    placeholder-markup: true;
    placeholder-color: Gray;
    markup: true;
    blink: true;
    tab-stops: none;
    cursor-width: 2px;
    cursor-color: var(text-color);
    cursor-outline: false;
    cursor-outline-width: 0px;
    cursor-outline-color: rgba(0, 0, 0, 1.0);
    hide-cursor-on-empty: true;
    text-outline: false;
    text-outline-width: 0px;
    text-outline-color: rgba(0, 0, 0, 1.0);
    expand: true;

    // Background and Foreground
    background-color: var(background);
    background-image: none;
    foreground-color: var(foreground);

    // Padding
    padding: 0px;

    // Border
    border-color: none;
    border: 0px;
    border-radius: 0px;
    border-aa: false;
    border-disable-nvidia-workaround: false;

    // Margin
    margin: 0px;

    // Cursor
    cursor: text;
}

