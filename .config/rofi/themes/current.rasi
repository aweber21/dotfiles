//--- List View ---//
listview {
    enabled: true;

    // Module Specific
    layout: vertical;
    flow: vertical;
    lines: 10;
    fixed-height: true;
    columns: 1;
    fixed-columns: true;
    dynamic: false;
    cycle: true;
    spacing: 2px;
    reverse: false;
    require-input: false;
    scrollbar: true;
    scrollbar-width: 4px;

    // Background and Foreground
    background-color: var(background);
    background-image: none;
    foreground-color: var(foreground);

    // Padding
    padding: 5px 0px 0px 0px;

