//----------------------------------------------------------------------------//
// Rofi-Wayland                                                               //
//----------------------------------------------------------------------------//

* {
    // Variables
    wallpaperPrimary: rgba(251, 63, 96, 1.0);
    wallpaperSecondary: rgba(253, 207, 52, 1.0);
    kittyBackground: rgba(0, 0, 0, 0.8);
    kittyForeground: rgba(221, 221, 221, 1.0);

    // Generic Background and Foreground
    background: var(kittyBackground);
    foreground: var(kittyForeground);

    // Selected Element Background
    selectedBackground: var(wallpaperPrimary);

    // Separator
    separatorColor: var(wallpaperSecondary);

    // Global Text Color
    text-color: var(kittyForeground);
}

//--- Window ---//
window {
    enabled: true;
    children: [ "mainbox" ];

    // Module Specific
    // font: "JetBrainsMono Nerd Font";
    transparency: "real";
    location: center;
    anchor: center;
    fullscreen: false;
    width: none;
    x-offset: 0px;
    y-offset: 0px;
    orientation: vertical;
    spacing: 0px;

    // Background and Foreground
    background-color: var(background);
    background-image: none;

    // Padding
    padding: 10px;

    // Border
    border-color: var(wallpaperPrimary);
    border: 2px;
    border-radius: 2px;
    border-aa: false;
    border-disable-nvidia-workaround: false;

    // Margin
    margin: 0px;

    // Cursor
    cursor: default;
}

//--- Overlay ---//
overlay {
    enabled: true;

    // Module Specific
    timeout: 5;

    // Background and Foreground
    background-color: var(background);
    background-image: none;
    foreground-color: var(foreground);

    // Padding
    padding: 0px 2px;

    // Border
    border-color: var(separatorColor);
    border: 1px;
    border-radius: 0px;
    border-aa: false;
    border-disable-nvidia-workaround: false;

    // Margin
    margin: 0px 2px;

    // Cursor
    cursor: default;
}

//--- Mainbox ---//
mainbox {
    enabled: true;
    children: [ "inputbar","message","listview","mode-switcher" ];

    // Module Specific
    orientation: vertical;
    spacing: 0px;

    // Background and Foreground
    background-color: var(background);
    background-image: none;
    foreground-color: var(foreground);

    // Padding
    padding: 0px;

    // Border
    border-color: none;
